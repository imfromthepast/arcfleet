    <apex:attribute name="cname" type="string" description="todo"/>
    <apex:attribute name="tname" type="string" description="todo"/>
    <apex:attribute name="coords" type="string" description="todo"/>
    <apex:attribute name="notes" type="string" description="todo"/>
    <apex:attribute name="householders" type="Householder__c[]" description="todo"/>
    <apex:attribute name="zoom" type="string" default="" description="todo"/>
    <div class="cardr" style="page-break-after: always;">
        <div style="position:absolute; z-index: 10; padding: 3px; font-family: Arial Unicode MS; font-size: 16px; background-color: #EEEAE2;border:1px black solid;">
