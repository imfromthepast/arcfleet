                <div class="hex even"></div>
                <div class="hex"></div>
            </div>
            <div class="hex-row">
                <div class="hex"></div>
                <div class="hex even"></div>
                <div class="hex"></div>
            </div>
        </div>
    </div>
    <div class="hex-2">&#x2B22;</div>
