    <style> 
    	body { margin: 0; } 
    	canvas { width: 100%; height: 100% } 
    </style>
    <script type="text/javascript">
    	var renderer = new THREE.WebGLRenderer();
		renderer.setSize(window.innerWidth, window.innerHeight);
		document.body.appendChild(renderer.domElement);

		var ratio = window.innerWidth/window.innerHeight;
		var camera = new THREE.PerspectiveCamera(45, ratio, 1, 1000);
		camera.position.z = 10;
		camera.position.y = 4;
		camera.lookAt(new THREE.Vector3(0, 0, 0));

		var scene = new THREE.Scene();
		 
		var material = new THREE.MeshBasicMaterial({color: 0x00AA00, wireframe: false, transparent: true, opacity: 0.25});
		var wireframe = new THREE.MeshBasicMaterial({wireframe:true});
		var geometry = new THREE.BoxGeometry(1, 1, 1);
		
		var sectors = [];
		var x = 0;
		var y = 1;
		for (var i = 1; i <= 10000; i++) {
			x += 1;
			if(x>100){
				x = 1;
				y += 1;
			}
			sectors.push(
				{
					x:x,
					y:y
				}
			)
		}
		for (var i = 0; i < sectors.length; i++) {
			
			var sector = new THREE.Mesh(geometry,material);
			sector.position.set(sectors[i].x,sectors[i].y,0);
			scene.add(sector);
		}
		var sphere = new THREE.Mesh(geometry, material);
		sphere.position.set(2,2,0);
		//scene.add(sphere);
		 
		var directionalLight = new THREE.DirectionalLight(0xFFFFFF, 1);
		directionalLight.position.set(0, 1, 0.5);
		scene.add(directionalLight);
		 function animate() {
		 sphere.rotation.y += 0.01;
		 renderer.render(scene, camera);
		 requestAnimationFrame(animate);
		}
		var controls = new THREE.OrbitControls( camera, renderer.domElement );
		animate();
    </script>
</apex:page>