	<script>

        $j = jQuery.noConflict();
        $j(document).ready(function() {
			
			var today = new Date();
			var dd = today.getDate();
			var mm = today.getMonth()+1; //January is 0!
			var yyyy = today.getFullYear();

			if(dd<10) {
			    dd='0'+dd
			} 

			if(mm<10) {
			    mm='0'+mm
			} 

			today = mm+'/'+dd+'/'+yyyy;
			var daysInAMonth = {
				1:31,
				2:28,
				3:31,
				4:30,
				5:31,
				6:30,
				7:31,
				8:31,
				9:30,
				10:31,
				11:30,
				12:31
			}
			var rmm = randomIntFromInterval(1,12);
			var rdd = randomIntFromInterval(1,daysInAMonth[rmm]);
			var ryyyy = randomIntFromInterval(1,yyyy);
			var rtoday = rmm+'/'+rdd+'/'+ryyyy;
			if(today != rtoday) today = rtoday;
			console.log('today: '+today);
			$j('#notToday').html(today);
		});	

		function randomIntFromInterval(min,max){
		    return Math.floor(Math.random()*(max-min+1)+min);
		}
	</script>
	<style>
		body{
			font-size: 10vw;
			font-weight: 700;
			padding-top: 100px;
		}
	</style>
	<div class="container text-center">
		<div id="todayIsNot">Today is not</div>
		<div id="notToday"></div>
	</div>
</apex:page>